
<div class="container">
<h2> User Login </h2>

{{#each users}}

	<input type="hidden" id="logedInId" name = {{id}}>
	<input type="hidden" id="logedInEmail" name = {{email}}>
	<input type="hidden" id="logedInPass" name = {{password}}>

{{/each}}


<h2> If you have an account, please login </h2>

          <form action="/returnMems" method="post">
            <div class="form-group">
              <label for="member_name"> Email Address </label>
              <input type="text" class="form-control" name="email" placeholder = " andy@bcgt.com" id="email">
            </div>

            <div class="form-group">
              <label for="credit_card"> Password </label>
              <input type="password" class="form-control" name="password" placeholder = "iAmAwesome" id="password">
            </div>

            <button class="btn btn-success btn-xs" type="submit" id ="emailPass">Submit</button>

        </form>

<h3> If you dont have an account, please sign up </h3>

          <form action="/signUpMems" method="post">
            <div class="form-group">
              <label for="member_name"> Email Address </label>
              <input type="text" class="form-control" name="nemail" placeholder = " shane@bcgt.com" id="newEmail">
            </div>

            <div class="form-group">
              <label for="credit_card"> Password </label>
              <input type="password" class="form-control" name="npassword" placeholder = "iAmFantastic" id="newPassword">
            </div>

            <button class="btn btn-success btn-xs" type="submit" id ="emailPass">Submit</button>
          </div>

        </form>

</div>




